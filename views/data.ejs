<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bootstrap Table with EJS</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap/dist/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <h1>Current Data</h1>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Name</th>
          <th>Email</th>
          <th>Caption</th>
          <th>Region</th>
          <th>Phone</th>
          <th>Image</th>
          
        </tr>
      </thead>
      <tbody>
        <% for (let item of items) { %>
          <tr>
            <td><%= item.title %></td>
            <td><%= item.name %></td>
            <td><%= item.email %></td>
            <td><%= item.caption %></td>
            <td><%= item.region %></td>
            <td><%= item.phone %></td>
            <td>
              <img width="200" height="200" src="data:image/png;base64,<%= item.image %>" alt="Base64 Image" />
            </td>

          </tr>
        <% } %>
      </tbody>
    </table>

    <div class="pagination">
      <ul>
        <% if (currentPage > 1) { %>
          <li><a href="/data/<%= currentPage - 1 %>">Previous</a></li>
        <% } %>
        <% if (currentPage < totalPages) { %>
          <li><a href="/data/<%= currentPage + 1 %>">Next</a></li>
        <% } %>
      </ul>
    </div>

  </div>

  
</body>
</html>
